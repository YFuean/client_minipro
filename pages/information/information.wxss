.container {
  /* 固定 */
  display: flex;
  /* 排序的方向 */
  flex-direction: row;
  /* 中间 */
  justify-content: center;
  /* 属性适用于所有的flex容器，它是用来设置每个flex元素在侧轴上的默认对齐方式。 */
  align-items: flex-start;
  padding: 10rpx 20rpx 10rpx 20rpx;
}
/* 图片 */
.first {
  width: 250rpx;
  height: 140rpx;
}
.text1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 500rpx;
  height: 150rpx;
}
/* 字体只显示两行其余省略 */
.firsttext {
  font-size: medium;
  overflow: hidden;
  /* 超出省略号 */
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 控制行数 两行 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-left: 10px;
}
.firsttext1 {
  font-size: small;
  color: #777777;
  margin-left: 10px;
}

.firsttext3 {
  font-size: small;
