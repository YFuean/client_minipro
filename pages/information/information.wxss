/* 资讯（全部，教导处，学生会）的页面跳转 */
.swiper-tab {
  display: flex;
  justify-content: space-around;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  margin-top: -10rpx;
  margin-bottom: 10rpx;
}
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 130rpx;
  border-bottom: 5rpx solid #e0e0e0;
}
.on {
  color: #1ca1ff;
  border-bottom: 5rpx solid #1ca1ff;
}
.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

