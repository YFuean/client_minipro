/* pages/message/message.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 5rpx 15rpx;
  background-color: #f8f8ff;
}

.scroll-view{
  height: 100%;
}

.list_msg {
  position: relative;
  display: flex;
  width: 98%;
  justify-content: space-between;
  padding: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  border-bottom: 1px solid #e0e0e0;
}

.img_msg {
  margin-top: 10rpx;
  width: 30rpx;
  height: 35rpx;
}

.card_info {
  display: flex;
  width: 92%;
  flex-direction: column;
  justify-content: center;
}

.msg_date {
  font-size: small;
  color: darkgray; 
  display: flex;
  justify-content: flex-end;
}

.msg_info {
  font-size: 15px;
}
