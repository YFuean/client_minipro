
/* pages/login/login.wxss */
Page{
  width: 100%;
  height: 80vh;
  background-image: url(https://swl-kuzma.oss-cn-beijing.aliyuncs.com/markdown/20200525172919.png);
  background-size: 100% 100%;
}
.login-page{
  display: flex;
  flex-direction: column;
  margin: auto;
  width: 75%;
  align-items: center;
  position: relative;
}
.hover-title{
  position: absolute;
  top: 250rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 70rpx;
  font-weight: 1000;
  color: white;
  letter-spacing: 8rpx;
}
.login-form{
  position: absolute;
  top: 700rpx;
}
input{
  display: flex;
  margin-left: 40rpx;
  height: 10rpx;
  margin-bottom: 20rpx;
}
.placeholder-class{
  font-size: 25rpx;
  color: rgb(177, 170, 170);
  letter-spacing: 5rpx;
}
.phonenumber-input{
  display: flex;
  border-bottom: 1rpx solid #f4f4f4;
  margin-bottom: 10rpx;
}
.phonenumber-input image{
  width: 30rpx;
  height: 40rpx;
}
.password-input{
  display: flex;
  border-bottom: 1rpx solid #f4f4f4;
  margin-bottom: 10rpx;
}
.password-input image{
  width: 30rpx;
  height: 40rpx;
}
.code-input{
  display: flex;
  border-bottom: 1rpx solid #f4f4f4;
  margin-bottom: 10rpx;
}
.code-input image{
  width: 60rpx;
  height: 40rpx;
}
.getcode-btn{
  width: auto;
 height: 50rpx;
 background-color: white;
 color: #00bcd4;
 letter-spacing: 4rpx;
 font-weight: 500;
 font-size: 25rpx;
}
.login-gutter{
  display: flex;
  justify-content: space-between;
  color: #00bcd4;
  font-size: 25rpx;
}
.login-btn{
  width: 100%;
  background-color: #00bcd4;
  color: white;
  margin-top: 50rpx;
}
.wx-login{
  position: absolute;
  top: 1120rpx;
  display: flex;
  font-size: 24rpx;
  align-items: center;
}
.wx-login image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
} 

