.noidle-item {
  display: flex;
  flex-direction: row;
}
.noidle-item-prefix {
  font-size: 30rpx;
  margin: 10rpx 0 0 20rpx;
  white-space: nowrap;
}
.noidle-item-left {
  font-size: 30rpx;
  margin: 10rpx 0 0 20rpx;
  white-space: nowrap;
}
.noidle-item-content {
  font-size: 30rpx;
  margin: 10rpx 10rpx 0 0;
}
.drawer_logo{
  color: #FFF;
  font-size: 10pt;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}








