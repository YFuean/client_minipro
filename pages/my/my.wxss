/* 我的头像，昵称 */
.userinfo {
  position: absolute;
  top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}
.userinfo-avatar {
   width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.avatar-info{
  position: relative;
}
.avatar-editor{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 100rpx;
}

.menu-list{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  width: 100%;
  position: absolute;
  top: 360rpx;
}
.menu-item{
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgb(194, 180, 180,0.7);
  color: rgb(189, 183, 183);
  font-size: 35rpx;
  line-height: 80rpx;
}
.menu image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.right-image{
  width: 45rpx;
  height: 45rpx;
}







