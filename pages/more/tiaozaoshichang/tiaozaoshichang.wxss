/* pages/more/tiaozaoshichang/tiaozaoshichang.wxss */
.fabu-page{
  display: flex;
  flex-direction: column;
  align-content: center;
  padding: 50rpx;
  margin: auto;
  width: 100%;
  height: 100%;
  position: relative;
}

.name-textarea{
  width: 650rpx;
  height: 100rpx;
}

.description-textarea{
  width: 650rpx;
}

.placeholder-class{
  color: rgb(199, 188, 188);
  font-size: 30rpx;
}

.image-info{
  display: flex;
  flex-wrap: wrap;
}



.image-box{
  margin-right: 30rpx;
  width: 150rpx;
  height: 150rpx;
  position: relative;
  background-color: #e6e6e6;
}

.image-add-box{
  width: 150rpx;
  height: 150rpx;
  position: relative;
  background-color: #f5e9e9;
  border: 3rpx solid #e6e6e6;
}



.image-show{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 35%;
  left: 35%;
}

.image-view{
  width: 150rpx;
  height: 150rpx;
}

.image-cha{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -15rpx;
  right: -15rpx;
  border: 1rpx solid gray;
  border-radius: 50%;
}

.image-add{
  width: 80rpx;
  height: 80rpx;
  position: relative;
  top: 23%;
  left: 23%;
}

.other-description{
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  width: 100%;
}

.jiage{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  padding: 30rpx;
  border-top: 2rpx solid rgb(165, 157, 157);
  border-bottom: 2rpx solid rgb(165, 157, 157);
  margin-right: 120rpx;
  font-size: 32rpx;
}

.description-left image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.money{
  color: red;
}

.description-right image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.tongkuan{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgb(165, 157, 157);
  margin-right: 120rpx;
  font-size: 32rpx;
}

.more{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgb(165, 157, 157);
  margin-right: 120rpx;
  font-size: 32rpx;
}

.gray{
  color: gray;
  font-size: 30rpx;
}

.fabu-btn{
  background-color: orange;
  color: white;
  position: absolute;
  bottom: -80rpx;
  left: 150rpx;
  border-radius: 10rpx;
}

.fabu-btn.disabled{
  background-color: gray;
  color: black;
  position: absolute;
  bottom: -80rpx;
  left: 150rpx;
  border-radius: 10rpx;
}

.fenlei-choose{
  padding: 10rpx;
  margin: 20rpx;
  border: 0.5rpx solid gray;
  border-radius: 10rpx;
}

.one-type{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.one-type-item{
  padding: 5rpx;
  margin: 5rpx;
  display: inline-block;
  border-radius: 10rpx;
  background-color: rgb(237, 227, 227);
}
.one-type-item.active{
  color: red;
  background-color: rgba(255, 36, 36, 0.2);
}

.two-type{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 20rpx;
  /* border-top: 1rpx solid gray; */
}

.nav_right_items{
  padding: 5rpx;
  margin: 5rpx;
  display: inline-block;
  border-radius: 10rpx;
  border: 1rpx solid rgb(213, 207, 207);
}



.choosed-type{
  margin-left: 50rpx;
  padding: 5rpx;
  display: inline-block;
  border-radius: 10rpx;
  color: rgb(150, 150, 165);
  border: 1rpx solid gray;
  background-color: rgba(74, 74, 238,0.2);
}

.biaoqian-choose{
  padding: 10rpx;
  margin: 20rpx;
  border: 0.5rpx solid gray;
  border-radius: 10rpx;
}

.add-biaoqian{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 20rpx;
  align-content: center;
}

.choosed-biaoqian{
  padding: 5rpx;
  margin: 5rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  border-radius: 10rpx;
  color: rgb(150, 150, 165);
  border: 1rpx solid gray;
  background-color: rgba(74, 74, 238,0.2);
}

.delete-img{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}