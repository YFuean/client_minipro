/* pages/more/tiaozaoshichang/my.wxss */

.my-page{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.my-info{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
  width: 95%;
  height: 20vh;
  background-size: 100% 100%;
  padding: 20rpx;
  background-color: rgb(245, 229, 229);
  /* border-bottom: 1rpx solid gray; */
  background-image: url(https://swl-kuzma.oss-cn-beijing.aliyuncs.com/markdown/20200623084101.png);
}

.myInfo{
  display: flex;
  padding: 10rpx;
}

.myInfo image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  /* border: 1rpx solid gray; */
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.name{
  display: flex;
  flex-direction: column;
}

.userName{
  font-weight: 600;
  font-size: 40rpx;
}

.nickname{
  font-size: 30rpx;
}

.go-page{
  padding: 10rpx;
  font-size: 20rpx;
  background-color: rgb(225, 210, 210);
  display: flex;
  margin-left: 250rpx;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}

.go-page image{
  width: 20rpx;
  height: 20rpx;
}

.tab{
  position: sticky;
  top: 0;
  height: 80rpx;
  display: flex;
  align-content: center;
  align-items: center;
  width: 100%;
  background-color: rgb(250, 240, 240);
  border-radius: 10rpx;
  padding: 10rpx;
  font-size: 35rpx;
  font-weight: 600;
  justify-content: space-around;
  z-index: 1000;
}

.tab-item{
  padding: 30rpx;
}

.tab-item.active{
  color: #4facf4fc;
  border-bottom: 5rpx solid #6faedffc;
}

.container-info{
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: flex-start;
  padding: 20rpx;
  width: 100%;
  height: 100%;
  margin-top: -200rpx;
  /* background-color: rgb(247, 237, 237); */
}

.good-card{
  display: flex;
  flex-direction: row;
  width: 75%;
  margin: 10rpx;
  padding: 10rpx;
  justify-content: flex-start;
  /* border: 1rpx solid rgb(201, 188, 188); */
  box-shadow: gray 2rpx;
  background-color: white;
  border-radius: 10rpx;
}  


.good-description{
  padding: 15rpx;
  display: flex;
  flex-direction: column;
}

.cover-image{
  flex: 0 0 35%;
  height: 300rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
 }

.good-name{
  display: inline-block;
}

.good-price{
  color: red;
  font-size: 45rpx;
  margin-top: 20rpx;
}

.nocate{
  padding:100rpx;
  text-align: center;  
} 
 
.nocate image{
  width:70rpx;
  height:70rpx;
}
.nocate text{
  font-size:32rpx;
  display:block;
  color:#BBB;
  margin-right: 150rpx;
}