/* pages/more/tiaozaoshichang/search.wxss */
.sarch-page{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 10rpx;
  justify-content: center;
}

.search{
  position: relative;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin: 20rpx;
}

.search input{
  margin-left: 80rpx;  
  height: 60rpx;
  border-radius: 5px;
  width: 520rpx;
}

.searchcion{
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:20rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.placeholder-class{
  text-align: center;
  font-size: 30rpx;
  letter-spacing: 3rpx;
}

.search-area{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}

.input-clear{
  color: gray;
}

.search-history{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  justify-content: center;
  width: 90%;
}

.search-history image{
  width: 50rpx;
  height: 50rpx;
}

.search-info{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  padding: 20rpx;
}

.history-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx;
}

.history-item{
  height: 40rpx;
  min-width: 150rpx;
  padding: 10rpx;
  border-radius: 100rpx;
  background-color: rgb(242, 227, 227);
  margin: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
  font-size: 30rpx;
}

.section_show{
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  background-color: white;
  width: 100%;
  border-radius: 12rpx;
}

.search-item{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
}

.biaoqian{
  background-color: rgb(230, 220, 220);
  padding: 5rpx;
  border-radius: 50%;
  margin-right: 50rpx;
  font-size: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
}

.nocate{
  padding:100rpx;
  text-align: center;  
} 
 
.nocate image{
  width:70rpx;
  height:70rpx;
}
.nocate text{
  font-size:35rpx;
  display:block;
  color:#BBB;
}