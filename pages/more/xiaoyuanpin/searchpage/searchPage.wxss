@import "../../../../style/xxqGlobalCss";

/* ============搜索框============ */
.search-banner {
  width: 92%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx;
  background-color: #37c2bc;
}

.search-input {
  width: 78%;
  height: 72%;
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
  border-radius: 50rpx;
  background-color: #ffffff;
}

.search {
  width: 80%;
}

/* ============搜兼职、搜校招tab的样式============ */
.tab {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #9e9e9e;
}

.active {
  font-weight: 600;
}

/* 测试元素区域用 */
.bc {
  background-color: thistle;
}

/* ============兼职职位列表样式============ */
.card-job-wrap {
  background-color: #ffffff;
  padding: 20rpx 40rpx;
  margin-bottom: 10rpx;
}

.card-job {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  color: #616161;
}

.subcont--text {
  margin-right: 30rpx;
  font-size: small;
}

.job-tiem {
  display: flex;
}

.card-foot {
  display: flex;
  justify-content: space-between;
}

/* 职位标题 */
.job-title {
  font-size: larger;
