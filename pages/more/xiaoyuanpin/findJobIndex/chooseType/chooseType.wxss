    padding-left: 20rpx;
}

.item{
    margin-right: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 23%;
    height: 50rpx;
    padding: 10rpx 20rpx;
    border-radius: 3rpx;
    border: #ebeaea 1px solid;
    background-color: #ebeaea;
}

.item-active{
    border: #11ACA8 1px solid;
    color: #11ACA8;
    background-color: #fff;
    border-radius: 3rpx;

}


