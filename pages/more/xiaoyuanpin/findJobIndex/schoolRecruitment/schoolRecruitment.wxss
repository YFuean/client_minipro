@import "../../../../../style/xxqGlobalCss";

.absolute {
  position: absolute;
  top: 0;
  z-index: 100;
}

.sticky2 {
  margin-top: 115rpx;
  position: sticky;
  top: 100rpx;
  z-index: 200;
  transition: all 1s ease;
}

.tool{
  display: flex;
}

/* 选择时才显示的类型标签样式 */
.relative{
  position: relative;
}

.close{
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: #11ACA8 1px solid;
  color: #11ACA8;
  background-color: #e6f8f7;
}
/* 列表样式 */
.typeListNull{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-small {
  width: 40rpx;
  height: 40rpx;
}

.auto-right {
  display: flex;
  justify-content: right;
}

.card-job-wrap {
  background-color: #ffffff;
  padding: 20rpx 40rpx;
  margin-bottom: 10rpx;
}

.card-job {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}

.subcont--text {
  margin-right: 30rpx;
}

.job-item {
  display: flex;
  /* background-color: gold; */
}

.chip {
  display: flex;
  /* background-color: gold; */
}

.chip-item {
  margin-right: 20rpx;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  color: #616161;
  font-size: small;
  background-color: #f5f5f5;
  /* background-color:gold; */
}

.card-foot {
  display: flex;
  justify-content: space-between;
}

.job-title {
  font-size: larger;
  width: 80%;
}

.job-salary {
  color: #5cb0af;
}

.card-content {
  color: #616161;
}

.address-text {
  color: #9e9e9e;
}

/* 解析换行和空格 */
.pre-wrap {
  white-space: pre-wrap;
}
