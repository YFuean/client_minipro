@import "../../../../../style/xxqGlobalCss";

.jobDetailXzPage {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 职位、薪资、工作时间等 */
.card-job-ver {
  width: 90%;
  display: flex;
  flex-direction: column;
  padding: 40rpx 0rpx;
  /* background-color: lightblue; */
  /* border-bottom: #9e9e9e 1px solid; */
}

.row1 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color: lightcoral; */
}

.title {
  width: 80%;
  font-size: x-large;
  font-weight: 600;
}

.salary {
  font-size: large;
  color: #11aca8;
}

.row2 {
  display: flex;
  flex-wrap: wrap;
  white-space: pre-wrap;
  margin-top: 20rpx;
}

.icon-text {
  display: flex;
}

/* 联系人信息 */
.card-job-hor {
  width: 90%;
  display: flex;
  padding: 40rpx 0rpx;
  /* border-bottom: #9e9e9e 1px solid; */
  /* background-color: lightblue; */
}

.avatar--mid {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.info {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  align-items: center;
}

.icon--small {
  width: 40rpx;
  height: 40rpx;
}

/* 职位详情 */
.row3 {
  display: flex;
  align-items: center;
}

.text--content {
  font-size: medium;
  white-space: pre-wrap;
}

.chip-item {
  margin-right: 20rpx;
  border-radius: 8rpx;
  padding: 5rpx 10rpx;
  font-size: small;
  color: #616161;
  background-color: #f5f5f5;
}

.row4 {
  position: relative;
}

/* 公司信息 */
.logo--mid {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

/* 温馨提示 */
.row5 {
  display: flex;
}

.text--warning {
  color: #fd5c60;
}

/* 立即沟通--按钮 */
.btn-large {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 650rpx;
  height: 80rpx;
  font-size: large;
  color: #ffffff;
  background-color: #11aca8;
  border-radius: 5rpx;
}

.card-job-foot {
  height: 150rpx;
  width: 100%;
  position: fixed;
  z-index: 10;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.mt-40 {
  margin-top: 40rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.mr-40 {
  margin-right: 40rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}
