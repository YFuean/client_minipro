.tool{
  display: flex;
  align-items: center;
}

.icon-small {
  width: 40rpx;
  height: 40rpx;
}

.auto-right {
  display: flex;
  justify-content: right;
}

.card-job-wrap {
  background-color: #ffffff;
  padding: 20rpx 40rpx;
  margin-bottom: 10rpx;
}

.card-job {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  color: #616161;
}

.subcont--text {
  margin-right: 30rpx;
  font-size: small;
}

.job-tiem {
  display: flex;
}

.card-foot {
  display: flex;
  justify-content: space-between;
}

/* 职位标题 */
.job-title {
  font-size: larger;
  font-weight: 600;
}

.job-salary {
  color: #5cb0af;
}

.address-text {
  color: #9e9e9e;
}

.manager-info {
  display: flex;
  align-items: center;
}

.avatar--small {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.mr-15 {
  margin-right: 15rpx;
}
