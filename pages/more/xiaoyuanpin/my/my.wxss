@import "../../../../style/xxqGlobalCss";

.banner {
  width: 90%;
  display: flex;
  flex-direction: column;
  padding: 30rpx 40rpx;
  background-color: #37c2bc;
  color: #ffffff;
}

.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-inf {
  display: flex;
  flex-direction: column;
}

