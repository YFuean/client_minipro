.company-page{
    padding-top: 30rpx;
}

.company-card{
    display: flex;
    flex-direction: column;
    width: 92%;
    padding-top: 20rpx;
    padding-bottom: 30rpx;
    margin: 1rpx 30rpx;
    /* background-color: gold; */
    border-bottom: 1px solid #ebebeb;
}

.company-info{
    display: flex;
    align-items: center;
    height: 100rpx;
    margin-bottom: 20rpx;
    /* background-color: goldenrod; */
}

.title4--text{
    font-size: medium;
    font-weight: 600;
}

.subtitle--text{
    color: #424242;
}

.avatar{
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
}

.img{
    width: 100%;
    height: 100%;
}

.info{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.company-chip{
    display: flex;
}

.chip{
    margin-right: 20rpx;
    border-radius: 5rpx;
    padding: 10rpx 20rpx;
    color: #616161;
    font-size: small;
    background-color: #f5f5f5;
}

