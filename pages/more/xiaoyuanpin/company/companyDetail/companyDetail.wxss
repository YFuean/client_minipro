/* pages/more/findJob/company/companyDetail/companyDetail.wxss */
page {
  height: 100%;
}

.bgimg {
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.companyDetailPage {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-image: url(https://raw.githubusercontent.com/udacity/cn-wechat-weather/2-4/images/sunny-bg.png); */
}

.bcmask {
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.8);
}

/* 公司名、工作时间等 */
.company-banner {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 30rpx 20rpx 10rpx 20rpx;
  padding: 0rpx 25rpx;
  /* background-color: #181818; */
  color: white;
}

.row1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.com-info {
  display: flex;
  flex-direction: column;
}

.text--title {
  font-size: x-large;
  font-weight: 600;
}

.icon-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.row2 {
  display: flex;
  flex-wrap: wrap;
  white-space: pre-wrap;
}

.icon-item {
  display: flex;
  margin-right: 30rpx;
}

.icon--small {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
/* 公司地址和介绍 白色区域 */
.company-content {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 30rpx 20rpx 10rpx 20rpx;
  padding: 0rpx 25rpx 35rpx 25rpx;
  /* padding-bottom: 35rpx; */
  /* background-color: #181818; */
  /* opacity: 0.7; */
  color: white;
}

/* 公司地址 */
.com-address {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.text--title2 {
  font-size: larger;
}

/* 开设职位 */
.company-job {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* background-color: #181818; */
  color: white;
}

.job-count {
  margin-top: 15rpx;
  padding-bottom: 15rpx;
  padding-left: 15rpx;
  white-space: pre;
  border-bottom: 1px solid #ffffff;
}

.job-count-text {
  margin-left: 20rpx;
}

.joblist {
  display: flex;
  flex-direction: column;
  margin: 15rpx 10rpx;
}

.list-card {
  display: flex;
  flex-direction: column;
  padding: 35rpx 0rpx;
  margin: 15rpx 25rpx;
  border-bottom: 1px solid #ffffff;
}

.row3 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5rpx;
}

.title3--text {
  font-size: large;
}

/* 基础样式 */
.mb-15 {
  margin-bottom: 15rpx;
}

.mb-25 {
  margin-bottom: 25rpx;
}

.mb-45 {
  margin-bottom: 45rpx;
}
