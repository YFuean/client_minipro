/* pages/errands/my/becomeRunner/becomeRunner.wxss */
.container_e{
  display: flex;
  flex-direction: column;
  /* justify-content: center;
  align-content: center; */
  /* position: fixed; */
  height: 100%;
  width: 100%;
  background: #F5F5F5;
  /* background: white; */
  margin: auto;
  /* position: relative; */
}
/* 输入部分 */
.input-contianer{
  width: 100%;
  /* height: 24em; */
  display: flex;
  margin: 0px 0px 10px 0px ;
  background: white;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 上传图片部分 */
.idcard-contianer{
  width: 100%;
  /* height: 40em; */
  display: flex;
  margin: 10px 0px 10px 0px ;
  background: white;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 按钮部分 */
.btn{
  width: 100%;
  height: 5em;
  display: flex;
  margin: 20px 0px 10px 0px ;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 输入框部分 */
/* 标题 */
.intput-title{
  display: flex;
  justify-content: space-between;
  width: 100%;
  
}
.input-title-left{
  /* width: 50%; */
  font-size: 40rpx;
  line-height: 90rpx;
  margin-left: 20rpx;
}
.input-title-right{
  display: flex;
  flex-direction: column;
 
}
.input-title-icon{
  height: 2em;
  width: 3em;
}
.input-icon{
  height: 100%;
  width: 100%;
}
.input-title-right-text{
  font-size: 24rpx;
}
/* 单行输入框 */
.input-view-single{
  display: flex;
  align-items: center;
  height: 3em;
  width: 95%;
  border:1rpx dashed black;
  border-radius: 5px;
  margin: 5px 0px 5px 0px;
}
.input-text-single{
  font-size: 32rpx;
  display: flex;
  width: 20%;
  height: 100%;
  line-height: 3em;
  text-align: center;
  padding-left: 10px;
  border-right:1rpx dashed #C0C0C0;
}
.input-single{
  height: 100%;
  width: 80%;
}
/* 多行输入框 */
.textarea-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 10em;
  width: 95%;
  border:1rpx dashed black;
  border-radius: 5px;
  margin: 5px 0px 5px 0px;
}
.textarea-text{
  font-size: 32rpx;
  display: flex;
  width: 100%;
  height: 3em;
  padding-left: 20px;
  line-height: 3em;
  text-align: center;
  border-bottom: 1rpx dashed #C0C0C0;
}
.textarea-id{
  width: 100%;
}
/* 身份证上传部分 */
.idcard-title{
  display: flex;
  height: 3em;
  width: 100%;
  
}
.idcard-title-text{
  width: 100%;
  text-align: center;
  line-height: 3em;
}
.idcardfront-view{
  display: flex;
  height: 15em;
  width: 95%;
  margin: 20px 0px 20px 0px;
  justify-content: center;
  align-items: center;
  /* background-image: url("https://newbers.cn/pic/shenfenzhengzhengmian_2.png");
  background-repeat: no-repeat;
  background-size: contain; */
}
.idcardfront-image{
  height: 90%;
  width: 90%;
}
.idcardback-view{
  display: flex;
  height: 15em;
  width: 95%;
  margin: 20px 0px 20px 0px;
  justify-content: center;
  align-items: center;
  /* background-image: url("https://newbers.cn/pic/shenfenzhengfanmian_2.png");
  background-repeat: no-repeat;
  background-size: contain; */
}
.idcardback-image{
  height: 90%;
  width: 90%;
}

/* 确认按钮 文本*/
.btn_enter text{
  font-size: 34rpx;
  color: white;
  font-weight: 500;
}