/* 来这儿拿、送到这儿 */
.address-title{
  padding-left: 10rpx;
  font-size: 40rpx;
}

.first-inputs{
  margin: 10rpx;
  display: flex; 
  border-bottom: 1rpx solid grey;
  padding-bottom: 2px;
}
.first-inputs-left{
  display: flex;
  width: 90%;
  height: 3em;
}
.first-inputs-right{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 10%;
  height: 3em;
}
.address-input{
  height: 3em;
  width: 100%;
  line-height: 3em;
}
.address-icon{
  height: 1.5em;
  width: 1.5em;
}

.second-inputs{
  margin: 10rpx;
  display: flex;
  border-bottom: 1rpx solid grey;
  padding-bottom: 2px;
}
.specific-input{
  height: 3em;
  width: 100%;
  
}

.third-inputs{
  margin: 10rpx;
  display: flex;
  border-bottom: 1rpx solid grey;
  padding-bottom: 2px;
}
.name{
  height: 3em;
  width: 50%;
}
.name-input{
  height: 2em;
}

.tel{
  height: 3em;
  width: 50%;
}
.tel-input{
  height: 2em;
  border-left: 1rpx solid grey;
}

.goods-type-inputs{
  margin: 10rpx;
  display: flex; 
  border-bottom: 1rpx solid grey;
  padding-bottom: 2px;
}

.goods-type-input{
  height: 3em;
  width: 100%;
}

.goods-weight-inputs{
  margin: 10rpx;
  display: flex; 
  border-bottom: 1rpx solid grey;
