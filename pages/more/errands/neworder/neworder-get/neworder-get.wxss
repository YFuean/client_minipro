}

.goods-weight-input{
  height: 3em;
  width: 100%;
}

.btn{
  display: flex;
  width: 100%;
  margin: 100rpx 0rpx 0rpx 0rpx;
  justify-content: center;
}

.btn-enter{
  background-color: deepskyblue ;
  color:#ffff;
  font-weight: 500;
}


