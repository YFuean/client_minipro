/* 帮我送、帮我取导航设置 */
.service-tab {
  display: flex;
  height: auto;
  width: auto;
  padding: 20rpx;
  border-bottom: 1rpx solid #c0c0c0;
  text-align: center;
  line-height: 26rpx;
  flex-direction: row;
}

.service-tab-list {
  margin-left: 25rpx;
  margin-right: 25rpx;
  font-size: 12px;
  color: #777777;
}

