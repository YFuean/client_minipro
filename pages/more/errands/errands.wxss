  font-size: 13px;
  color: black;
  border-bottom: 20rpx solid yellow;

}

.swiper-box {
  display: block;
  /* height: 100%; */
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.service-tab-body{
  width: 100%;
  height: 50%;
}

.service-tab-input {
