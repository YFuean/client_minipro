  height: 50%;
  font-size: 34rpx;
  line-height: 3em;
  margin-left: 10px;
}
.information-info{
  height: 50%;
  font-size: 26rpx;
  color: #777777;
  line-height: 1em;
  margin-left: 10px;

}
.information-right{
  display: flex;
  height: 100%;
