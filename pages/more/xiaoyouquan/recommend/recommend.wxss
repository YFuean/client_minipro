}

.zhedie {
  position: relative;
}

.zhedie-on {
  position: absolute;
  left: 20px;
  top: 10px;
  z-index: 100;
  background: #aacfd0;
  width: 180px;
  height: 65px;
  font-size: 30rpx;
  padding: 10rpx;
  border: 1rpx solid rgb(211, 207, 207);
}

.zhedie-in {
  border: 1rpx solid rgb(211, 207, 207);
  position: absolute;
  left: 30px;
  top: 25px;
  z-index: 80;
  background: #9DC8C8;
  width: 190px;
  height: 155rpx;
}

.zhedie-under-on {
  text-align: center;
  position: absolute;
  left: 20px;
  top: 110px;
  z-index: 100;
  background: #aacfd0;
  width: 190px;
  height: 40px;
  padding: 20rpx;
  border: 1rpx solid rgb(211, 207, 207);
}

.zhedie-under-in {
  border: 1rpx solid rgb(211, 207, 207);
  position: absolute;
  left: 30px;
  top: 120px;
  z-index: 80;
  background: #9DC8C8;
  width: 205px;
  height: 130rpx;
}

.shu {
  float: right;
  width: 18rpx;
  height: 35rpx;
  line-height: 35rpx;
  margin: 0 20rpx;
  font-family: fantasy;
  word-wrap: break-word;
}


.scrollx {
  display: flex;
  flex-direction: row;
  width: 95%;
  margin: auto;
  white-space: nowrap;
}
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.row {
  display: inline-block;
  width: 30%;
}
.sayhai {
  width: 40rpx;
  height: 40rpx;
  margin-top: 3rpx;
}

.back {
  width: 155rpx;
  height: 50rpx;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  position: relative;
