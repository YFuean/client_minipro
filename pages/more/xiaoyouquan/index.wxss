  font-family: sans-serif;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
  font-weight: 800;
}
.ellipsis{
  -webkit-line-clamp:3; 
  opacity: 0.9
}
.unellipsis{
  -webkit-line-clamp:0; 
  opacity: 1 
}

