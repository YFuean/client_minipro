/**index.wxss**/
page {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.tab {
  float: left;
  width: 28%;
  text-align: center;
  padding: 25rpx 0;
}
.tab-title {
  position: absolute;
  margin-left: 10rpx;
  font-weight: 700;
}
.tab-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}






.alumni-title {
  margin: 5%;
}
.alumni-image {
