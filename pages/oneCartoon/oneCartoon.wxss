.oneCartoon-page{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.head-card{
  background-image: url(https://swl-kuzma.oss-cn-beijing.aliyuncs.com/markdown/20200531141509.png);
  width: 100%;
  height: 27vh;
  background-size: 100% 100%;
  position: relative;
}
.user-info{
  position: absolute;
  left: 40%;
  top: 15%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: white;
}
.my-money{
  font-size: 50rpx;
  font-weight: 600;
}
.user-info image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.my-kahao{
  position: absolute;
  top: 80%;
  left: 5%;
  color: white;
}
.ka-size{
  font-size: 25rpx;
}
.servicr-list{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  flex-wrap: wrap;
  margin-top: 50rpx;
}
.service-item{
  flex: 0 0 33.3%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  margin-bottom: 70rpx;
}
.service-item image{
  width: 85rpx;
  height: 85rpx;
  margin-bottom: 20rpx;
}