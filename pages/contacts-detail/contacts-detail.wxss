/* pages/contacts-detail/contacts-detail.wxss */
page {
    width: 100%;
    height: 100%;
  }
  .mail-info {
    margin: 30rpx;
  }
  .mail-info-ico {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 50rpx;

  }
  .mail-info-tap {
    position: absolute;
    top:100rpx;
    left: 40%;
  }
  .mail-info-avatar {
    width: 150rpx; 
    height: 150rpx;
    border-radius: 100rpx;
    box-shadow: 2px black;
  }
  
  .mail-info-bg {
    width: 100%;
    height: 35%;
    background-color: rgb(112, 164, 197);
  }
  
  .mail-info-title {
    font-size: large;
    font-weight: bold;
    color: white;
    display: flex;
  }

  .mail-info-content-one {
    margin: 60rpx;
  }
  .mail-info-content-text {
    font-size: 35rpx;
    margin: 20rpx;
  }
  
  .mail-info-btn {
    position: absolute;
    margin-top: 120rpx;
    margin-left: 5%;
  }
  
  .mail-info-tap-beizhu {
    width: 50rpx;
    height: 45rpx;
    margin: 10rpx;
  }
  .mail-info-back {
    position: absolute;
    left: 20rpx;
    top: 80rpx;
    color: white;
    display: flex;
  }

  .mail-line {
      border: 1rpx solid gainsboro;
      width: 90%;
      margin:10rpx auto;
  }