/* ================== 谢晓茜的全局样式 =============== */

/* ================== 颜色 ================== */
.xprimary {
  background-color: #37c2bc;
  color: #37c2bc;
}

/* 测试元素背景色 */
.bc {
  background-color: #37c2bc;
}

/* ================== 组件样式 ================== */

.xbtn-large-warp {
  height: 150rpx;
  width: 100%;
  position: fixed;
  z-index: 10;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.xbtn-large {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 650rpx;
  height: 80rpx;
  font-size: large;
  color: #ffffff;
  background-color: #11aca8;
  border-radius: 5rpx;
}

.xbtn-small {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 80rpx;
  font-size: large;
  color: #ffffff;
  /* background-color: #11aca8; */
  border-radius: 5rpx;
}

.xicon-small {
  width: 40rpx;
  height: 40rpx;
}

.xicon-tiny {
  width: 30rpx;
  height: 30rpx;
}

.xtwo-line {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.xone-line {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.xavatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.xchip-active-item {
  margin-right: 20rpx;
  padding: 5rpx 20rpx;
  border: #11aca8 1px solid;
  border-radius: 3rpx;
  font-size: smaller;
  color: #11aca8;
  background-color: #e6f8f7;
}

.xchip-warp{
  display: flex;
  flex-wrap: wrap;
}

.xchip-item-samll {
  margin-right: 20rpx;
  border-radius: 5rpx;
  padding: 5rpx 20rpx;
  color: #616161;
  font-size: small;
  background-color: #f5f5f5;
}


.xchip-item-samll-darken {
  margin-right: 30rpx;
  margin-bottom: 15rpx;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  color: #212121;
  font-size: small;
  background-color: #f5f5f5;
}

